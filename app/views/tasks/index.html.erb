<h1>Tasks</h1>

<ul>
  <% @tasks.each do |task| %>
    <li>
      <%= link_to task.title, task_path(task) %><br>
      Completed? <%= task.completed ? "Yes" : "No" %><br>
      <%= link_to 'Edit', edit_task_path(task) %> |
      <%= link_to 'Delete', task_path(task), data: { turbo_method: :delete, turbo_confirm: "Delete #{task.title}?" } %>
    </li>
  <% end %>
</ul>
