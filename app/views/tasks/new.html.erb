<h1>New Task</h1>

<%= form_with model: @task, local: true do |f| %>
  <div>
    <%= f.label :title, "Title" %><br>
    <%= f.text_field :title %>
  </div>

  <div>
    <%= f.label :details, "Details" %><br>
    <%= f.text_area :details %>
  </div>

  <div>
    <%= f.submit "Create Task" %>
  </div>
<% end %>

<%= link_to 'Back to Tasks', tasks_path %>
