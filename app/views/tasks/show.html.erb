<div class="container d-flex flex-column align-items-center">
  <h1 class="mb-4"><%= @task.title %></h1>

  <div class="mb-3">
    <strong>Details:</strong>
    <p class="border rounded p-3 bg-light"><%= @task.details %></p>
  </div>

  <div class="mb-4">
    <strong>Completed:</strong>
    <span class="<%= @task.completed ? 'text-success' : 'text-danger' %>">
      <%= @task.completed ? "Yes" : "No" %>
    </span>
  </div>

  <div class="d-flex gap-2">
    <%= link_to 'Back to tasks list', tasks_path, class: "btn btn-secondary" %>
    <%= link_to 'Edit', edit_task_path(@task), class: "btn btn-primary" %>
    <%= link_to 'Delete', task_path(@task), data: { turbo_method: :delete, turbo_confirm: "Delete #{@task.title}?" }, class: "btn btn-danger" %>
  </div>
</div>
