<div class="container d-flex flex-column align-items-center">
  <h1>Edit Task</h1>

  <%= form_with model: @task, local: true, html: { class: "needs-validation", novalidate: true } do |f| %>
    <div class="mb-3">
      <%= f.label :title, "Title", class: "form-label" %>
      <%= f.text_field :title, class: "form-control", required: true %>
    </div>

    <div class="mb-3">
      <%= f.label :details, "Details", class: "form-label" %>
      <%= f.text_area :details, class: "form-control", rows: 4 %>
    </div>

    <div class="form-check mb-3">
      <%= f.check_box :completed, class: "form-check-input", id: "task_completed" %>
      <%= f.label :completed, "Completed", class: "form-check-label", for: "task_completed" %>
    </div>

    <div>
      <%= f.submit "Update Task", class: "btn btn-primary" %>
      <%= link_to 'Back to Tasks', tasks_path, class: "btn btn-secondary ms-2" %>
    </div>
  <% end %>
</div>
